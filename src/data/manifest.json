{
  "types": {
    "Entity": {
      "abstract": "true",
      "properties"  : {
        "id": {
          "type": "String",
          "modality": "1"
        },
        "name": {
          "type": "String",
          "modality": "0..1"
        },
        "class": {
          "type": "String:Type",
          "modality": "1"
        },
        "color": {
          "type": "String:Color",
          "modality": "0..1",
          "default": "#666"
        },
        "external": {
          "type": "String:ID",
          "modality": "0..1"
        },
        "inGroups": {"type":"Group", "modality": "0..*"},
        "viewObjects": {
          "type": "Object:Map",
          "modality": "0..1",
          "default": {}
        },
        "material": {
          "type": "Object:Visual",
          "modality": "0..1"
        },
        "labels": {
          "type": "Object:Map",
          "default": {}
        },
        "infoFields": {
          "type": "Object:Map",
          "modality": "0..1",
          "default": {
            "text"   : ["id", "class", "name", "external"],
            "objects": [],
            "lists"  : []
          }
        }
      }
    },
    "Node"  : {
      "extends": "Entity",
      "properties" : {
        "host"  : { "type": "String:ID|Link", "modality": "0..1" },
        "isRoot": { "type": "Boolean",        "modality": "0..1" },
        "layout": { "type": "Object:Map",     "modality": "0..1" },
        "type"  : { "type": "String:Enum",    "modality": "0..1" },
        "links" : { "type": "String:ID|Link", "modality": "0..*", "default": []},

        "infoFields": {
          "extends" : "Entity:infoFields",
          "modality": "0..1",
          "default" : {}
        },

        "x": {"type": "Number", "modality": "0..1" },
        "y": {"type": "Number", "modality": "0..1" },
        "z": {"type": "Number", "modality": "0..1" },
        "val"   : { "type": "Number", "modality": "0..1", "default": 1},
        "offset" : {"type": "Number", "modality": "0..1"},

        "charge" : {"type": "Number", "modality": "0..1", "default": 0},
        "collide": {"type": "Number", "modality": "0..1", "default": 0}
      }
    },
    "Link"  : {
      "extends": "Entity",
      "properties" : {
        "source": {"type": "String:ID|Node", "modality": "1"},
        "target": {"type": "String:ID|Node", "modality": "1" },
        "length": {"type": "Number",         "modality": "1", "default": 1 },
        "conveyingLyph": {"type": "String:ID|Lyph", "modality": "0..1"},
        "type"         : {"type": "String:Enum",    "modality": "1"},
        "infoFields": {
          "extends": "Entity:infoFields",
          "default": {
            "text": ["length", "type"],
            "objects": ["source", "target", "conveyingLyph"]
          }
        },
        "direction": {"type": "Function", "readonly": true},
        "reversed" : {"type": "Boolean", "default": false}
      }
    },
    "Lyph"  : {
      "extends": "Entity",
      "properties" : {
        "axis"        : {"type": "String:ID|Link", "modality": "1"},
        "layers"      : {"type": "String:ID|Lyph", "modality": "0..*"},
        "layerInLyph" : {"type": "String:ID|Lyph", "modality": "0..1"},
        "topology": {},
        "border"  : {"type": "Border", "modality": "1", "default": {}},
        "infoFields": {
          "extends" : "Entity:infoFields",
          "default" :{
            "text": ["topology"],
            "objects": ["axis"],
            "lists": ["layers"]
          }
        },
        "width"    : {"type": "Number"},
        "height"   : {"type": "Number"},
        "offset"   : {"type": "Number", "modality": "0..1"},
        "internalLyphs": {"type": "Lyph", "modality": "0..*"}
      }
    },
    "Border": {
      "extends": "Entity",
      "properties" : {
        "borders"     : {"type": "Object", "modality": "4"},
        "borderTypes" : {"type": "String", "modality": "0..1"},
        "borderInLyph": {"type": "String:ID|Lyph", "modality": "1"}
      }
    },
    "Group" : {
      "extends": "Entity",
      "properties": {
        "entities": {"type": "Entity", "modality": "0..*"}
      }
    },
    "Graph" : {
      "extends": "Entity",
      "properties": {
        "nodes": {"type": "Node", "modality": "0..*"},
        "links": {"type": "Link", "modality": "0..*"}
      }
    },
    "Tree"  : {
      "extends": "Graph",
      "properties": {
        "root": {"type": "Node", "modality": "1"}
      }
    }
  },
  "relationships": [
    {
      "types"   : ["Entity", "Group"],
      "keys"    : ["inGroups", "entities"],
      "modality": ["0..*", "0..*"]
    },
    {
      "types"   : ["Link", "Node"],
      "keys"    : ["source", "links"],
      "modality": ["1", "0..*"]
    },
    {
      "types"   : ["Link", "Node"],
      "keys"    : ["target", "links"],
      "modality": ["1", "0..*"]
    },
    {
      "types": ["Link", "Lyph"],
      "keys" : ["conveyingLyph", "axis"],
      "modality": ["1..2", "0..1"]
    },
    {
      "types": ["Lyph", "Lyph"],
      "keys" : ["layers", "layerInLyph"],
      "modality": ["0..*", "0..1"]
    },
    {
      "types": ["Lyph", "Border"],
      "keys" : ["border", "borderInLyph"],
      "modality": ["1", "1"]
    },
    {
      "types": ["Lyph", "Lyph"],
      "keys" : ["content", "container"],
      "modality": ["0..1", "0..1"]
    },
    {
      "types": ["Lyph", "Lyph"],
      "keys" : ["belongsToLyph", "internalLyphs"],
      "modality": ["0..1", "0..*"]
    }
  ]
}